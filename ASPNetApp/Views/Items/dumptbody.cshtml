
@{
    ViewBag.Title = "dumptbody";
    Layout = "~/Views/Suppliers/Index.cshtml";
}

<h2>dumptbody</h2>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tb_m_supplier.Name)
        </td>
        <td>
            @Html.ActionLink(" Edit ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil", @style = "color:#FFC300", @title = "edit" })
            @Html.ActionLink(" Details ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-file", @style = "color:green", @title = "details" })
            @Html.ActionLink(" Delete ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", @style = "color:red", @title = "delete" })
            @*<button class="btn btn-danger"><i class="fa fa-trash"> Delete</i></button>*@
        </td>
    </tr>
}
